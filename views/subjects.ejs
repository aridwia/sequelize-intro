<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teachers</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Subjects</title>
  </head>
  <body>
<h1 align=center>Data Subjects</h1>
<div class="container">
<td><a href="/"> Home </a></td>
<br>
<br>
<p><a href="/subjects/addsubject">Add Subject</a></p>
<br>
<br>
<table class="table table-striped">
  <tr>
    <th>ID </th>
    <th>Subject Name </th>
    <th>Pengajar </th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% var no = 1; dataSubject.forEach(ds => {%>
        <tr>
          <td><%= no %> <% no+=1%></td>
          <td><%= ds.subject_name %></td>
          <%if (ds.Teachers.length != 0) {%>
            <td>
              <% for (var i = 0; i < ds.Teachers.length; i++ ) { %>
                <% var no_guru = 1 %>
                <%= i+1%>. <%= ds.Teachers[i].first_name %> <%= ds.Teachers[i].last_name %><br>
              <% } %>
            </td>
          <%} else {%>
            <td><center> - </center></td>
          <% } %>
          <td><a href='subjects/<%= ds.id %>/enrolledstudents'>Enrolled Students</a></td>
          <td><a href='subjects/edit/<%= ds.id %>'> Edit</a> || <a href='subjects/delete/<%= ds.id %>' onclick="return confirm('Yakin mau menghapus data ini?');"> Delete</a></td>
        </tr>
      <% }) %>
</table>
</div>
  <br>

  </body>
</html>
